<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug" monitorInterval="10">
	<Properties>
		<Property name="logFilePath">$${sys:dsmp:-logfile}</Property>
		<Property name="filename">$${sys:download-logfile:-download-log.txt}</Property>
	</Properties>
	<Appenders>
		<Console name="CONSOLE" target="SYSTEM_OUT">
			<PatternLayout pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n"/>
		</Console>
		<RollingFile name="downloadLog" fileName="${filename}" filePattern="${filename}.%i.log" immediateFlush="true">
			<PatternLayout pattern="%m%n"/>
			<Policies>
				<SizeBasedTriggeringPolicy size="100MB"/>
			</Policies>
			<DefaultRolloverStrategy max="1000"/>
		</RollingFile>
		<RollingFile name="LOG_FILE" fileName="${logFilePath}-log.txt" filePattern="${logFilePath}.%i.log" immediateFlush="true">
			<PatternLayout pattern="[%d{yyyyMMdd.HH:mm:ss.SSS}:%-5level][%-17t][%-30c][%m]%n"/>
			<Policies>
				<SizeBasedTriggeringPolicy size="100MB"/>
			</Policies>
			<DefaultRolloverStrategy max="1000"/>
		</RollingFile>
		<RollingFile name="ERROR_FILE" fileName="${logFilePath}-errorlog.txt" filePattern="${logFilePath}.error.%i.log" immediateFlush="true">
			<PatternLayout pattern="[%d{yyyyMMdd.HH:mm:ss.SSS}:%-5level][%-17t][%-30c{2}][%m]%n"/>
			<Policies>
				<SizeBasedTriggeringPolicy size="100MB"/>
			</Policies>
			<DefaultRolloverStrategy max="1000"/>
		</RollingFile>
	</Appenders>
	<Loggers>
		<Logger name="downloadLog" level="info" additivity="false">
			<AppenderRef ref="downloadLog" level="info"/>
		</Logger>

		<Logger name="de.park.dsmp" level="debug" additivity="false">
			<AppenderRef ref="LOG_FILE" level="debug"/>
		</Logger>

		<Root level="debug" additivity="false">
			<AppenderRef ref="CONSOLE" level="debug"/>
			<AppenderRef ref="LOG_FILE" level="debug"/>
			<AppenderRef ref="ERROR_FILE" level="error"/>
		</Root>
	</Loggers>
</Configuration>